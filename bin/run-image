#!/bin/sh

SSH_KEYPATH=$(grep ssh-keypath config.yml | sed "s/.*: //")
SSH_KEYPATH="${SSH_KEYPATH/#\~/$HOME}"

docker run --rm -it \
           --name docker-stack \
	   -v ${SSH_KEYPATH}.pub:/id_rsa.pub \
	   -v ${SSH_KEYPATH}:/id_rsa \
	   -v $(pwd)/config.yml:/config.yml \
	   -v /Users/${USER}/.docker:/odoko/.docker \
	   --entrypoint bash \
	   odoko/docker-stack
